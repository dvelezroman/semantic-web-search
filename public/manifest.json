{
	"short_name": "Ivi Search",
	"name": "Ivi",
	"manifest_version": 2,
	"permissions": [
		"tabs",
		"storage",
		"unlimitedStorage",
		"https://*/**",
		"http://*/*"
	],
	"author": "dvelezroman",
	"version": "0.1.0",
	"browser_action": {
		"default_title": "Ivi Search",
		"default_popup": "index.html"
	},
	"background": {
		"scripts": ["scripts/background/main.js"]
	},
	"icons": {
		"16": "favicon.ico",
		"48": "logo192.png",
		"128": "logo512.png"
	}
}
